<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demoadress.TestController">
   <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0">
      <Label text="Тести про університет" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

      <!-- Multi-Answer Question -->
      <VBox spacing="5">
         <Label text="Обрати правильних здобувачів освіти:"/>
         <CheckBox fx:id="checkBoxStudent1" text="Богдан Дмитрук"/>
         <CheckBox fx:id="checkBoxStudent2" text="Мартін Думас"/>
         <CheckBox fx:id="checkBoxStudent3" text="Роман Грінь"/>
         <Button fx:id="buttonVerifyMultiAnswer" text="Перевірити" onAction="#verifyMultiAnswer"/>
         <Label fx:id="labelMultiAnswerResult" text="" style="-fx-text-fill: blue;"/>
      </VBox>

      <!-- ChoiceBox Question -->
      <VBox spacing="5">
         <Label text="Оберіть кафедру:"/>
         <ChoiceBox fx:id="choiceBoxDepartment"/>
         <Button fx:id="buttonVerifyChoice" text="Перевірити" onAction="#verifyChoiceBox"/>
         <Label fx:id="labelChoiceResult" text="" style="-fx-text-fill: blue;"/>
      </VBox>

      <!-- ComboBox Question -->
      <VBox spacing="5">
         <Label text="Оберіть спеціальність:"/>
         <ComboBox fx:id="comboBoxSpecialization" promptText="Введіть спеціальність"/>
         <Label fx:id="labelComboBoxResult" text="" style="-fx-text-fill: green;"/>
      </VBox>

      <!-- RadioButton Question -->
      <VBox spacing="5">
         <Label text="Ваш улюблений курс?"/>
         <RadioButton fx:id="radioButtonFavoriteCourse1" text="Основи програмування"/>
         <RadioButton fx:id="radioButtonFavoriteCourse2" text="Математичний аналіз"/>
         <RadioButton fx:id="radioButtonFavoriteCourse3" text="Мережі та безпека"/>
         <Button fx:id="buttonVerifyRadio" text="Перевірити" onAction="#verifyRadioButton"/>
         <Label fx:id="labelRadioResult" text="" style="-fx-text-fill: red;"/>
      </VBox>
   </VBox>
</AnchorPane>
